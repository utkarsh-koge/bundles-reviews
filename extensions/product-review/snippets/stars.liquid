{% liquid
  assign rating = rating | default: 0
  assign full_stars = rating | floor
  assign has_half_star = rating | modulo: 1 | round: 1
  assign empty_stars = 5 | minus: full_stars
  if has_half_star > 0.3
    assign empty_stars = empty_stars | minus: 1
  endif
%}

<span class="star-rating" aria-label="Rating: {{ rating }} out of 5 stars">
  {% for i in (1..full_stars) %}
    <span class="star full" aria-hidden="true">★</span>
  {% endfor %}
  
  {% if has_half_star > 0.3 %}
    <span class="star half" aria-hidden="true">★</span>
  {% endif %}
  
  {% for i in (1..empty_stars) %}
    <span class="star empty" aria-hidden="true">☆</span>
  {% endfor %}
</span>

<style>
  .star-rating {
    display: inline-flex;
    align-items: center;
    gap: 0.1rem;
  }
  .star {
    font-size: 1.2rem;
    line-height: 1;
  }
  .half {
    position: relative;
  }
  .half:after {
    content: "☆";
    position: absolute;
    left: 0;
    width: 50%;
    overflow: hidden;
  }
</style>